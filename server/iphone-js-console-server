#!/usr/bin/env ruby
require 'rubygems'
require 'em-websocket'

EM::run do

  puts 'iPhone JS Console Start'
  @channel = EM::Channel.new

  EM::WebSocket.start(:host => "0.0.0.0", :port => 8088) do |ws|
    ws.onopen{
      sid = @channel.subscribe{|mes|
        ws.send(mes)
      }
      puts "<#{sid}> connected!!"

      ws.onmessage{|mes|
        puts "<#{sid}> #{mes}"
      }

      ws.onclose{
        puts "<#{sid}> disconnected"
        @channel.unsubscribe(sid)
      }
    }
  end

  EM::defer do
    loop do
      @channel.push(gets.gsub(/[\r\n]/,''))
    end
  end

end
